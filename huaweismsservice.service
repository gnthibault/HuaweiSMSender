[Unit]
Description=Huawei SMS service
After=multi-user.target

[Service]
Type=idle
# MUST SET YOUR USERNAME HERE.

User=rock
Environment="PATH=/home/rock/project/HuaweiSMSender"
ExecStart=python /home/rock/project/HuaweiSMSender/rest.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
